                "security": [{"bearerAuth": []}],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id do produto",
                        "required": true
                    }
                ],
                "responses": {
                    "500": {
                        "description": "Erro ao processar a solicitação"
                    },
                    "401": {
                        "description":"Unauthorized"
                    },
                    "404": {
