                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Product"
                                    
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary" : "Deleta produto pelo Id",
                "description" : "Essa rota será responsável por deletar um produto usando o id como parâmetro",
                "tags": ["Products"],
                "security": [{"bearerAuth": []}],
                "parameters": [
                    {
                        "name": "id",
